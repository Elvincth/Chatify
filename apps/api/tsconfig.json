{
  "compilerOptions": {
    "lib": ["ES2015"],
    "module": "CommonJS",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "routes": ["./src/routes"],
      "api": ["src/api"],
      "middleware": ["./src/middleware/"],
      "utils": ["./src/utils/"]
    }
  },
  "exclude": ["node_modules"],
  "extends": "tsconfig/base.json",
  "include": ["src/**/*"]
}
